<% include ../partials/header %>
<div class="main">
    <% if (session.flash) { %>
        <div class="flash">
            <%= session.flash %>
        </div>
        <% session.flash = null; %>
    <% } %>

    <form action="/process-transfer">
        <select name="fromAccount">
            <option value="">Transfer from...</option>
            <% session.accounts.forEach(function(account) { %>
                <option value="<%= account.id%>"><%= account.acc_name %>( <%= account.amount %> )</option>
            <% }) %>
        </select>
        <select name="toAccount">
            <option value="">Transfer to...</option>
            <% session.accounts.forEach(function(account) { %>
                <option value="<%= account.id%>"><%= account.acc_name %>( <%= account.amount %> )</option>
            <% }) %>
        </select>
        Amount: <input type="number" name="amount">
        <input type="submit" value="Make transfer">
    </form>
</div>
<% include ../partials/footer %>
